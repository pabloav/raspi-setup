#!/bin/sh

adduser pablo
usermod -G audio pablo
usermod -G video pablo

# Gives the user full sudo rights
echo "pablo  ALL=(ALL) ALL" >> /etc/sudoers

# This disables the default "pi" account, so be cautious
usermod --expiredate 1 pi

mkdir ~pablo/.ssh
wget -O ~pablo/.ssh/authorized_keys https://dl.dropbox.com/u/5290/ssh/authorized_keys
chown -R pablo.pablo ~pablo/.ssh
